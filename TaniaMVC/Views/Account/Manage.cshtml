@model TaniaMVC.Models.LocalPasswordModel
@{
    ViewBag.Title = "Administrar cuenta";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<section class="secPad">
    <div class="container">
        <p></p>
        <div class="panel panel-info">
            <div class="panel-heading"><h3>@ViewBag.Title</h3></div>
            <div class="panel-body">
                
                <p class="message-success">@ViewBag.StatusMessage</p>

                <div class="alert alert-success" role="alert">
                    <h4>Ha iniciado sesión como <strong>@User.Identity.Name</strong>.</h4>
                </div>

                @if (ViewBag.HasLocalPassword)
                {
                    @Html.Partial("_ChangePasswordPartial")
                }
                else
                {
                    @Html.Partial("_SetPasswordPartial")
                }

            </div>
        </div>
    </div>
</section>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

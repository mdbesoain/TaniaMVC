
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    AccesoDatos.Models.Evento evento = ViewBag.evento;
    List<AccesoDatos.Models.Estadistica> estadisticas = ViewBag.estadisticas;
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Dashboard <small>Estadisticas</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> Dashboard
                        </li>
                    </ol>
                </div>
            </div>

            <!-- /.row -->
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-users fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewBag.countUser</div>
                                    <div>Usuarios Registrados</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-trophy fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewBag.carreras</div>
                                    <div># Competencias</div>
                                </div>
                            </div>
                        </div>
                        <a href="@Url.Action("Index", "Estadistica")">
                            <div class="panel-footer">
                                <span class="pull-left">Ver detalles</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-bolt fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewBag.evntos</div>
                                    <div># Eventos</div>
                                </div>
                            </div>
                        </div>
                        <a href="@Url.Action("Index", "Evento")">
                            <div class="panel-footer">
                                <span class="pull-left">Ver detalles</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-red">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-eye fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"> @ViewBag.Lconteo </div>
                                    <div>Contador de Visitas!</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-6">
                    <!--Last Evento -->
                    <h3>Próximo Evento</h3>
                    <div class="thumbnail">
                        <img style="min-height:300px;height:300px;min-width:200px;width:200px;" src="@evento.url_flayer" alt="Flayer"></a>
                        <div class="caption">
                            <h3>@evento.nombre</h3>
                            <h4>@evento.Disciplina.nombre</h4>
                            <h4>Dirección: @evento.direccion</h4>
                            <h4>Fecha: @evento.fecha</h4>
                            <p>@evento.descripcion</p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6"><!--Estadisticas -->
                    <h3>Estadísticas</h3>
                    <table id="example" class="table table-striped table-bordered" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Posición Manga 1</th>
                                <th>Posición Manga 2</th>
                                <th>Posición Final</th>
                                <th>Evento</th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Posición Manga 1</th>
                                <th>Posición Manga 2</th>
                                <th>Posición Final</th>
                                <th>Evento</th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var item in estadisticas)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.id_estadistica)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pos_manga1)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pos_manga2)</td>
                                    <td>@Html.DisplayFor(modelItem => item.pos_final)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Evento.nombre)</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->



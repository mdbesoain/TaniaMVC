<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/isotope.css" media="screen" />

    <link rel="stylesheet" href="~/Content/css/styles.css" />
    <!-- Font Awesome -->
    <link href="~/Content/font/css/font-awesome.min.css" rel="stylesheet">

    <!--[if lte IE 8]><script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script><![endif]-->
    <script src="~/Scripts/modernizr-latest.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>

</head>
<body>
    <!--Header-->
    <header class="header">
        <div class="container">
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="navbar-header">
                    <button type="button" id="nav-toggle" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand scroll-top logo"><b>Tania González</b></a>
                </div>
                <!--/.navbar-header-->
                <div id="main-nav" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav" id="mainNav">
                        <li class="active"><a href="@Url.Action("Index", "Home")"><b>Home</b></a></li>
                        @{if (Session["usu_nombre"] != null)
                          {
                            <li class="active" style="padding-top:25px;">
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a style="color:white" class="fa fa-sign-out" href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesión</a>
                                }
                            </li>
                          }
                        }
                    </ul>
                </div>
                <!--/.navbar-collapse-->
            </nav>
            <!--/.navbar-->
        </div>
        <!--/.container-->
    </header>
    <div id="#top"></div>
    @RenderBody()

    <!--Footer-->
    <footer>
        <div class="container">
            <div class="social text-center">
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="https://www.facebook.com/pages/Tania-Gonzalez-Cabello/1451488215139675?fref=ts"><i class="fa fa-facebook"></i></a>
            </div>

            <div class="clear"></div>
            <!--CLEAR FLOATS-->
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>

@{  string login;
    bool loged = false;
    if (Session["usu_nombre"] == null){
       login = "Login";
       loged = false;
    }
    else { 
       login = "Perfil";
       loged = true;
    }
 }
<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/isotope.css" media="screen" />
    <link rel="stylesheet" href="~/Scripts/fancybox/jquery.fancybox.css" type="text/css" media="screen" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/da-slider.css" />
    <!-- Owl Carousel Assets -->
    <link href="~/Scripts/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/styles.css" />
    <!-- Font Awesome -->
    <link href="~/Content/font/css/font-awesome.min.css" rel="stylesheet">

    <!--[if lte IE 8]><script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script><![endif]-->
    <script src="~/Scripts/modernizr-latest.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.isotope.min.js" type="text/javascript"></script>
    <script src="~/Scripts/fancybox/jquery.fancybox.pack.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.nav.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.cslider.js" type="text/javascript"></script>
    <script src="~/Scripts/custom.js" type="text/javascript"></script>
    <script src="~/Scripts/owl-carousel/owl.carousel.js"></script>

</head>
<body>
    <!--Header-->
    <header class="header">
        <div class="container">
            <nav class="navbar navbar-inverse" role="navigation">
                <div class="navbar-header">
                    <button type="button" id="nav-toggle" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand scroll-top logo"><b>Tania González</b></a>
                </div>
                <!--/.navbar-header-->
                <div id="main-nav" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav" id="mainNav">
                        <li class="active"><a href="#home" class="scroll-link">Inicio</a></li>
                        <li><a href="#aboutUs" class="scroll-link">Sobre mi</a></li>
                        <li><a href="#experiencia" class="scroll-link">Experiencia</a></li>
                        <li><a href="#logros" class="scroll-link">Logros</a></li>
                        <li><a href="#portfolio" class="scroll-link">Portafolio</a></li>
                        <li><a href="#eventos" class="scroll-link">Eventos</a></li>
                        <li><a href="#auspiciadores" class="scroll-link">Auspiciadores</a></li>
                        <li><a href="#contactUs" class="scroll-link">Contactame</a></li>
                        @{if (loged == true)
                          {
                              <li><a href="@Url.Action("Manage", "Account")">@login</a></li>
                          }
                          else { 
                          <li><a href="@Url.Action("Login", "Account")">@login</a></li>
                          }
                        }                        
                    </ul>
                </div>
                <!--/.navbar-collapse-->
            </nav>
            <!--/.navbar-->
        </div>
        <!--/.container-->
    </header>
    <div id="#top"></div>

    @RenderBody()

    @RenderSection("scripts", required: false)
</body>
</html>

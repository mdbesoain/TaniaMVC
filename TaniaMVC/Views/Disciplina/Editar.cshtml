@model AccesoDatos.Models.Disciplina
@{
    ViewBag.Title = "Editar Disciplina";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="panel panel-success">
                <div class="panel-heading"><h4>@ViewBag.Title</h4></div>
                <div class="panel-body">
                    @using (Html.BeginForm("Editar", "Disciplina", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.id_disciplina);
                        <fieldset>
                            <legend>Formulario del evento</legend>
                            <div class="form-group">
                                <label for="inputNombre" class="control-label col-xs-2">Nombre:</label>
                                <div class="col-xs-5">
                                    @Html.TextBoxFor(model => model.nombre, new { @type = "text", @class = "form-control", @placeholder = "Nombre de la Disciplina", required = "required " })
                                    @Html.ValidationMessageFor(model => model.nombre)
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputDecripcion" class="control-label col-xs-2">Descripcion:</label>
                                <div class="col-xs-5">
                                    @Html.TextBoxFor(model => model.descripcion, new { @type = "text", @class = "form-control", @placeholder = "Descripcion de la Disciplina", required = "required " })
                                    @Html.ValidationMessageFor(model => model.descripcion)
                                </div>
                            </div>

                            <div class='wrapper text-center'>
                                <div class="col-xs-5">
                                    @Html.ActionLink("Atras", "Index", "Disciplina", new { @class = "btn btn-danger" })
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
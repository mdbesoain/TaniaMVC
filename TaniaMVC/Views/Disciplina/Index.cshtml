@model IEnumerable<AccesoDatos.Models.Disciplina>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div>
                @Html.ActionLink("Agregar Disciplina", "Agregar")
            </div>
            <div>
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
                            <td>
                                @Html.ActionLink(" ", "Editar", new { id = item.id_disciplina }, new { @rel = "tooltip", @title = "Editar", @class = "fa fa-pencil-square-o" })
                                @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.id_disciplina }, new { @rel = "tooltip", @title = "Eliminar", @class = "fa fa-trash-o", onclick = "return confirm('¿Está seguro que desea eliminar la disciplina?');" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

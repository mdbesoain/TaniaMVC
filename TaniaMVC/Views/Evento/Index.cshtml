@model IEnumerable<AccesoDatos.Models.Evento>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <p>
                @Html.ActionLink("Create New", "Agregar")
            </p>
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID Evento</th>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Fecha</th>
                        <th>url_flayer</th>
                        <th></th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>ID Evento</th>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Fecha</th>
                        <th>url_flayer</th>
                        <th></th>
                    </tr>
                </tfoot>

                <tbody>
                    @foreach (var item in Model)
                    {
                       <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_evento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.direccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.url_flayer)
                            </td>
                            <td>
                               @Html.ActionLink(" ", "Editar", new { id = item.id_evento }, new { @rel = "tooltip", @title = "Editar", @class = "fa fa-pencil-square-o" })
                               @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.id_evento }, new { @rel = "tooltip", @title = "Eliminar", @class = "fa fa-trash-o", onclick = "return confirm('¿Está seguro que desea eliminar al afiliado?');" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
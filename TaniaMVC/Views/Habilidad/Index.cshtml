@model IEnumerable<AccesoDatos.Models.Habilidad>

@{
    ViewBag.Title = "Habilidades";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="panel panel-info">
                <div class="panel-heading"><h4>@ViewBag.Title</h4></div>
                <div class="panel-body">
                    <div>
                        @Html.ActionLink("Agregar Habilidad", "Agregar", "Habilidad", null, new { @class = "btn btn-primary" })
                    </div>
                    <p>
                    </p>
                    <table id="example" class="table table-striped table-bordered" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID Habilidad</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>ID Habilidad</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th></th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.descripcion)
                                    </td>
                                    <td align="center">
                                        @Html.ActionLink(" ", "Editar", new { id = item.Id }, new { @rel = "tooltip", @title = "Editar", @class = "fa fa-pencil-square-o" })
                                        @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.Id}, new { @rel = "tooltip", @title = "Eliminar", @class = "fa fa-trash-o", onclick = "return confirm('¿Está seguro que desea eliminar la habilidad?');" })
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@model AccesoDatos.Models.Habilidad

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Editar Habilidad</h3>
                    @using (Html.BeginForm("Editar", "Habilidad", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id);

                        <div class="form-group">
                            <label for="inputNombre" class="control-label col-xs-2">Nombre:</label>
                            <div class="col-xs-5">
                                @Html.TextBoxFor(model => model.nombre, new { @type = "text", @class = "form-control", @placeholder = "Nombre de la Habilidad", required = "required " })
                                @Html.ValidationMessageFor(model => model.nombre)
                            </div>
                        </div>
                        
                        <div class='wrapper text-center'>
                            <div class="col-xs-5">
                                @Html.ActionLink("Atras", "Index", "Habilidad", new { @class = "btn btn-danger" })
                                <button type="submit" class="btn btn-primary">Editar</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('input[id=file]').change(function () {
        $('#photoCover').val($(this).val());
    });
</script> 
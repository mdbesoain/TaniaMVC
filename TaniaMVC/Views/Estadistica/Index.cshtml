@model IEnumerable<AccesoDatos.Models.Estadistica>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div>
                @Html.ActionLink("Agregar Estadistica", "Agregar", "Estadistica", new { @class = "btn btn-primary" })
            </div>
            <p></p>
            <div>
                <table id="example" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Pos Manga 1</th>
                            <th>Pos Manga 2</th>
                            <th>Pos Final</th>
                            <th>Evento</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.pos_manga1)</td>
                                <td>@Html.DisplayFor(modelItem => item.pos_manga2)</td>
                                <td>@Html.DisplayFor(modelItem => item.pos_final)</td>
                                <td>@Html.DisplayFor(modelItem => item.Evento.nombre)</td>
                                <td align="center">
                                    @Html.ActionLink(" ", "Editar", new { id = item.id_estadistica }, new { @rel = "tooltip", @title = "Editar", @class = "fa fa-pencil-square-o" })
                                    @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.id_estadistica }, new { @rel = "tooltip", @title = "Eliminar", @class = "fa fa-trash-o", onclick = "return confirm('¿Está seguro que desea eliminar la disciplina?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

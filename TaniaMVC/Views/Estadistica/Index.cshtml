@model IEnumerable<AccesoDatos.Models.Estadistica>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <p></p>
            <div>
                <table id="example" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Posición Manga 1</th>
                            <th>Posición Manga 2</th>
                            <th>Posición Final</th>
                            <th>Evento</th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Posición Manga 1</th>
                            <th>Posición Manga 2</th>
                            <th>Posición Final</th>
                            <th>Evento</th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.id_estadistica)</td>
                                <td>@Html.DisplayFor(modelItem => item.pos_manga1)</td>
                                <td>@Html.DisplayFor(modelItem => item.pos_manga2)</td>
                                <td>@Html.DisplayFor(modelItem => item.pos_final)</td>
                                <td>@Html.DisplayFor(modelItem => item.Evento.nombre)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

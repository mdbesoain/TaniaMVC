@model IEnumerable<AccesoDatos.Models.About>

<section id="aboutUs" class="secPad">
    <div class="container">
        <div class="heading text-center">
            <!-- Heading -->
            <h2>@Model.FirstOrDefault().nombre</h2>
            <p>@Model.FirstOrDefault().descripcion</p>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                if (item != Model.FirstOrDefault())
                {
                    <!-- item -->
                    <div class="col-md-4 text-center tileBox">
                        <div class="txtHead">
                            <h3>@item.nombre <span class="id-color"></span></h3>
                        </div>
                        <p>@item.descripcion</p>
                    </div>
                    <!-- end: -->
                }
            }
        </div>
    </div>
</section>
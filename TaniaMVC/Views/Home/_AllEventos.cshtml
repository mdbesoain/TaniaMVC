@model IEnumerable<AccesoDatos.Models.Evento>

<section id="eventos" class="secPad">
    <div class="container">
        <div class="heading text-center">
            <!-- Heading -->
            <h2>Eventos</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing</p>
            @Html.ActionLink("Inicio", "Index", "Home", new { @class = "btn btn-danger" })
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@item.url_flayer" alt="Flayer">
                        <div class="caption">
                            <h3>@item.nombre</h3>
                            <h4>@item.Disciplina.nombre</h4>
                            <h4>Dirección: @item.direccion</h4>
                            <h4>Fecha: @item.fecha</h4>
                            <p>@item.descripcion</p>
                            @*Html.ActionLink("Atras", "Index", "Logro", new { @class = "btn btn-danger" })*@
                            <p><a href="#" class="btn btn-default" role="button">Ver evento</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div>
            @Html.ActionLink("Inicio", "Index", "Home", new { @class = "btn btn-danger" })
        </div>
</section>

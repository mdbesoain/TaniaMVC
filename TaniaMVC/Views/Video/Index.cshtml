@model IEnumerable<AccesoDatos.Models.Video>
@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="panel panel-info">
                <div class="panel-heading"><h4>@ViewBag.Title</h4></div>
                <div class="panel-body">
                    <div>
                        @Html.ActionLink("Agregar Video", "Agregar", "Video", new { @class = "btn btn-primary" })
                    </div>
                    <p></p>
                    <div>
                        <table id="example" class="table table-striped table-bordered" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Url</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Url</th>
                                    <th></th>
                                </tr>
                            </tfoot>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.id_video)</td>
                                        <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                        <td>@Html.DisplayFor(modelItem => item.url)</td>
                                        <td align="center">
                                            @Html.ActionLink(" ", "Editar", new { id = item.id_video }, new { @rel = "tooltip", @title = "Editar", @class = "fa fa-pencil-square-o" })
                                            @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.id_video }, new { @rel = "tooltip", @title = "Eliminar", @class = "fa fa-trash-o", onclick = "return confirm('¿Está seguro que desea eliminar el logro?');" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<AccesoDatos.Models.Foto>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div>
                @Html.ActionLink("Agregar Foto", "Agregar", null ,new { @class = "btn btn-primary" })
                @Html.ActionLink("Categorias", "Index", "Categoria", null ,new { @class = "btn btn-primary" })
            </div>
            <p></p>
            <div>
                <table id="example" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th></th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td align="center">
                                    @Html.ActionLink(" ", "Abrir", new { id = item.id_foto }, new { @rel = "tooltip", @title = "Abrir", @class = "fa fa-pencil-square-o" })
                                    @Html.ActionLink(" ", "Editar", new { id = item.id_foto }, new { @rel = "tooltip", @title = "Editar", @class = "fa fa-pencil-square-o" })
                                    @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.id_foto }, new { @rel = "tooltip", @title = "Eliminar", @class = "fa fa-trash-o", onclick = "return confirm('¿Está seguro que desea eliminar al evento?');" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>